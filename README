Main Configuration Files
main.tf
hcl
Copy code
locals {
  common_tags = {
    Tag1    = "Value1"
    Tag2    = "Value2"
    Tag3    = "Value3"
    Tag4    = "Value4"
    Tag5    = var.timestamp
  }
}

module "s3_bucket" {
  source        = "./modules/s3"
  environment   = var.environment
  unique_number = var.unique_number
  tags          = local.common_tags
}

module "cloudfront_distribution" {
  source              = "./modules/cloudfront"
  s3_bucket_origin_id = module.s3_bucket.bucket_domain_name
  tags                = local.common_tags
}
