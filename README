func connectInstance(instanceID, region string) {
    // Generate temporary credentials (this step depends on your specific use case)
    _, err := generateTemporaryCredentials()
    if err != nil {
        fmt.Println("Error generating temporary credentials:", err)
        return
    }

    // If region is not specified, attempt to find the instance's region
    if region == "" {
        fmt.Println("No region specified, searching for the instance across all regions...")
        region, err = findInstanceRegion(instanceID) // Implement or use existing logic to find the region
        if err != nil {
            fmt.Println("Error finding instance:", err)
            return
        }
        fmt.Printf("Instance %s found in region %s\n", instanceID, region)
    } else {
        fmt.Printf("Region specified: %s\n", region)
    }

    // Connect to the instance using the found or specified region
    fmt.Printf("Connecting to instance %s in region %s...\n", instanceID, region)
    err = startSSMSession(instanceID, region) // Use the existing logic to start an SSM session
    if err != nil {
        fmt.Println("Error starting SSM session:", err)
        return
    }
}
