variable "environment" {
  description = "Deployment environment (e.g., prod, dev)"
}

variable "unique_number" {
  description = "Unique identifier for resources"
}

variable "timestamp" {
  description = "Timestamp or other value passed from Jenkins"
}
Module: S3
modules/s3/main.tf
hcl
Copy code
resource "aws_s3_bucket" "this" {
  bucket = "${var.environment}-test-bucket-${var.unique_number}"
  acl    = "private"
  tags   = var.tags

  website {
    index_document = "index.html"
  }
}

resource "aws_s3_bucket_object" "index_html" {
  bucket       = aws_s3_bucket.this.id
  key          = "index.html"
  content      = file("${path.module}/index.html")
  content_type = "text/html"
}

resource "aws_s3_bucket_object" "upload_folder" {
  bucket       = aws_s3_bucket.this.id
  key          = "upload/"
  source       = "/dev/null"
  content_type = "binary/octet-stream"
}

resource "aws_s3_bucket_object" "test_zip" {
  bucket       = aws_s3_bucket.this.id
  key          = "download/test.zip"
  source       = "${path.module}/download/test.zip"
  content_type = "application/zip"
}

output "bucket_id" {
  value = aws_s3_bucket.this.id
}

output "bucket_arn" {
  value = aws_s3_bucket.this.arn
}

output "bucket_domain_name" {
  value = aws_s3_bucket.this.website_endpoint
}
