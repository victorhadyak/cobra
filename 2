func startSSMSession(instanceID, region string) error {
    // Prepare the arguments for the AWS CLI command
    args := []string{"aws", "ssm", "start-session", "--target", instanceID, "--region", region}

    // Use syscall.Exec to replace the current process with the AWS CLI command
    // The command will take over the terminal and handle signals directly
    return syscall.Exec("/usr/bin/env", args, os.Environ())
}

